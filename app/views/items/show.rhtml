<h1><%=h @item.title %></h1>

<table>
  <tr><th>type of item:</th>
    <td><%=h @item.type %></td></tr>
  <tr><th>owner:</th>
    <td><%=
      login = h(@item.owner.login)
      link_to login, user_path(login) %></td></tr>
  <tr><th>held by:</th>
    <td><%=
      login = h(@item.held_by.login)
      link_to login, user_path(login) %></td></tr>
</table>

<h2>Description</h2>

<p>
<%= clean @item.description %>
</p>

<h1><%=h @user.login %></h1>

<table>
  <tr><th>type</th><th>title</th></tr>
  <% @user.owned.each do |item|
       type = item.class.to_s.downcase %>
    <tr>
      <td><%=h type %></td>
      <td><%= link_to h(item.title), { :controller => type,
                                       :action => :show,
                                       :id => item.id } %></td>
    </tr>
  <% end %>
</table>

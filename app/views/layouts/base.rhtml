<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">
<html>

<head>
  <%= stylesheet_link_tag 'andreas06' %>
</head>

<body>
<div id="container">

	<a id="top"></a><p class="hide">Skip to: <a href="#menu">site menu</a> | <a href="#sectionmenu">section menu</a> | <a href="#main">main content</a></p>

	<div id="sitename">
		<h1>e.f.l.</h1>
		<span>Edmonton Free Library</span>
		<a id="menu"></a>
	</div>

	<div id="navitabs">
		<h2 class="hide">Site menu:</h2>
		<a class="activenavitab" href="/">Welcome</a><span class="hide"> | </span>

		<!-- <a class="navitab" href="newstuff.php">What's New!</a><span class="hide"> | </span> -->
		<a <%= link_to 'books', books_path, :class => 'navitab' %><span class="hide"> | </span>
		<a <%= link_to 'video', videos_path, :class => 'navitab' %><span class="hide"> | </span>
		<!-- <a class="navitab" href="search.php?type=music">Music</a><span class="hide"> | </span> -->
		<a class="navitab" href="/contact">find out more</a><span class="hide"> | </span>
		<p class="hide"><a href="#top">Back to top</a></p>
	</div>
	<div id="wrap1">
		<div id="wrap2">


			<div id="leftside">
				<a id="sectionmenu"></a>
				<p class="soft">
				</p>
				<h1>e.f.l.</h1>
				<p class="menublock">
					<% if current_user %>
						<%= user_link current_user, :class => 'nav' %><br class="hide" />
						<%= link_to 'edit profile', {:controller => 'account'}, :class =>'nav' %><br class="hide" />
						<%= link_to 'log out', {:controller => 'account', :action => 'logout'}, :class=> 'nav' %>
					<% else %>
						<%= link_to 'log in', {:controller => 'account', :action => 'login'}, :class=> 'nav' %><br class="hide" />
						<%= link_to 'new account', {:controller => 'account', :action => 'signup'}, :class=> 'nav' %><br class="hide" />
					<% end %>
					<a class="hide" href="#top">Back to top</a>
				</p>
			</div>

			<a id="main"></a>
			<div id="contentalt">

				<div class="main">
					<% if flash[:notice] %>
						<p style="color: green"><%= flash[:notice].untaint %></p>
					<% elsif flash[:error] %>
						<p style="color: red"><%= flash[:error].untaint %></p>
					<% end %>

					<%= yield  %>
					<p class="hide"><a href="#top">Back to top</a></p>
				</div>
			</div>
			<div id="footer"> Copy away mofos | Design by <a href="http://andreasviklund.com">Andreas Viklund</a></div>
		</div>
	</div>
</div>
</body>

</html>
